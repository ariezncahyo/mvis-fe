{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    // "types": [
    //   "node"
    // ],
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/helpers/*": [
        "helpers/*"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/store/*": [
        "store/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/routes/*": [
        "routes/*"
      ],
      "@/assets/*": [
        "assets/*"
      ],
      "@/icons/*": [
        "icons/*"
      ],
      "@/sagas/*": [
        "sagas/*"
      ],
      "@/utils/*": [
        "utils/*"
      ]
    }
  },
  "include": [
    "./src"
  ]
}
